{
  "name": "nuke-monorepo",
  "version": "0.0.0-development",
  "description": "Deletes all node_modules folders and yarn.lock files in a Yarn Workspaces monorepo",
  "main": "./dist/nuke-monorepo.umd.js",
  "module": "./dist/nuke-monorepo.es.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/nuke-monorepo.es.js",
      "require": "./dist/nuke-monorepo.umd.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "coverage": "codecov",
    "clean": "rm -rf ./dist/",
    "dev": "vite",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "preview": "vite preview",
    "semantic-release": "semantic-release",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickderobertis/nuke-monorepo.git"
  },
  "license": "MIT",
  "author": {
    "name": "Nick DeRobertis",
    "email": "nickderobertis@users.noreply.github.com",
    "url": "https://github.com/nickderobertis"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "commitizen",
    "semantic-release",
    "codecov"
  ],
  "bugs": {
    "url": "https://github.com/nickderobertis/nuke-monorepo/issues"
  },
  "homepage": "https://github.com/nickderobertis/nuke-monorepo#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/register": "^7.18.6",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@yarnpkg/cli": "^4.0.0-rc.10",
    "@yarnpkg/core": "^4.0.0-rc.10",
    "c8": "^7.11.2",
    "codecov": "^3.8.3",
    "commitlint": "^16.2.4",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^19.0.2",
    "typescript": "^4.2.4",
    "vite": "^2.9.6",
    "vitest": "^0.10.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  }
}
